generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  isAdmin   Boolean  @default(false)
  plan      String   @default("free") // "free" | "pro"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  magicLinkTokens MagicLinkToken[]
  projects        Project[]
}

model AccessRequest {
  id        String    @id @default(cuid())
  email     String    @unique
  status    String    @default("pending") // pending, approved, rejected
  note      String?   // Optional note from requester
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([status])
}

model MagicLinkToken {
  id        String    @id @default(cuid())
  tokenHash String    @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@index([userId])
}

model Project {
  id                 String   @id @default(cuid())
  name               String
  productDescription String   @db.Text
  offer              String?  @db.Text
  brandVoice         String?  @db.Text
  forbiddenClaims    String[] @default([])
  language           String   @default("en")
  region             String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  personas Persona[]
  batches  Batch[]

  @@index([userId])
}

model Persona {
  id           String   @id @default(cuid())
  name         String
  description  String   @db.Text
  demographics String?  @db.Text
  painPoints   String[] @default([])
  desires      String[] @default([])
  objections   String[] @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Batch {
  id             String   @id @default(cuid())
  status         String   @default("pending") // pending, processing, completed, failed
  requestedCount Int
  platform       String   // tiktok, reels, shorts
  angles         String[]
  durations      Int[]    // 15, 30, 45
  personaIds     String[] @default([]) // Empty = all personas
  quality        String   @default("standard") // "standard" | "premium"
  pdfUrl         String?
  csvUrl         String?
  errorMessage   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  scripts   Script[]

  @@index([projectId])
  @@index([status])
}

model Script {
  id               String   @id @default(cuid())
  status           String   @default("pending") // pending, generating, completed, failed
  angle            String
  duration         Int
  hook             String?  @db.Text
  storyboard       Json?    // Array of storyboard steps
  ctaVariants      String[] @default([])
  filmingChecklist String[] @default([])
  warnings         String[] @default([])
  score            Int?     // 0-100
  errorMessage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  batchId        String
  batch          Batch    @relation(fields: [batchId], references: [id], onDelete: Cascade)
  parentScriptId String?
  parent         Script?  @relation("ScriptVersions", fields: [parentScriptId], references: [id], onDelete: SetNull)
  versions       Script[] @relation("ScriptVersions")

  @@index([batchId])
  @@index([status])
  @@index([parentScriptId])
}
