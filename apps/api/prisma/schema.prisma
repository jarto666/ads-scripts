generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  isAdmin   Boolean  @default(false)
  plan      String   @default("free") // "free" | "pro"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // LemonSqueezy subscription
  lemonSqueezyCustomerId    String?
  lemonSqueezySubscriptionId String?
  subscriptionStatus        String?  // "active" | "cancelled" | "expired" | "past_due"
  subscriptionEndsAt        DateTime?

  magicLinkTokens     MagicLinkToken[]
  projects            Project[]
  creditBalances      CreditBalance[]
  creditTransactions  CreditTransaction[]
  projectDraft        ProjectDraft?
}

model CreditBalance {
  id        String    @id @default(cuid())
  userId    String
  type      String    // "free" | "subscription" | "pack"
  balance   Int       @default(0)
  expiresAt DateTime? // null for pack (never expires)

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
}

model CreditTransaction {
  id           String   @id @default(cuid())
  userId       String
  creditType   String   // "free" | "subscription" | "pack"
  amount       Int      // +20 for grant, -5 for usage
  balanceAfter Int      // snapshot after transaction

  type         String   // "renewal" | "generation" | "purchase" | "admin" | "refund" | "expire"
  description  String?  // "Monthly free credits" | "Generated 5 scripts" | etc.

  // References
  batchId      String?  // if type = "generation"
  orderId      String?  // LemonSqueezy order ID if type = "purchase"

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([type])
}

// Track deleted users to prevent free credit abuse
model DeletedUser {
  id            String   @id @default(cuid())
  email         String   @unique
  originalPlan  String   // Plan they had when deleted
  deletedAt     DateTime @default(now())

  @@index([email])
}

model AccessRequest {
  id        String    @id @default(cuid())
  email     String    @unique
  status    String    @default("pending") // pending, approved, rejected
  note      String?   // Optional note from requester
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([status])
}

model MagicLinkToken {
  id        String    @id @default(cuid())
  tokenHash String    @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@index([userId])
}

model Project {
  id                 String    @id @default(cuid())
  name               String
  productDescription String    @db.Text
  offer              String?   @db.Text
  brandVoice         String?   @db.Text
  forbiddenClaims    String[]  @default([])
  language           String    @default("en")
  region             String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime?

  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  personas Persona[]
  batches  Batch[]

  @@index([userId])
  @@index([deletedAt])
}

model Persona {
  id           String   @id @default(cuid())
  name         String
  description  String   @db.Text
  demographics String?  @db.Text
  painPoints   String[] @default([])
  desires      String[] @default([])
  objections   String[] @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Batch {
  id             String   @id @default(cuid())
  status         String   @default("pending") // pending, processing, completed, failed
  requestedCount Int
  platform       String   // tiktok, reels, shorts
  angles         String[]
  durations      Int[]    // 15, 30, 45
  personaIds     String[] @default([]) // Empty = all personas
  quality        String   @default("standard") // "standard" | "premium"
  pdfUrl         String?
  csvUrl         String?
  errorMessage   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  scripts   Script[]

  @@index([projectId])
  @@index([status])
}

model Script {
  id               String   @id @default(cuid())
  status           String   @default("pending") // pending, generating, completed, failed
  angle            String
  duration         Int
  hook             String?  @db.Text
  storyboard       Json?    // Array of storyboard steps
  ctaVariants      String[] @default([])
  filmingChecklist String[] @default([])
  warnings         String[] @default([])
  score            Int?     // 0-100
  errorMessage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  batchId        String
  batch          Batch    @relation(fields: [batchId], references: [id], onDelete: Cascade)
  parentScriptId String?
  parent         Script?  @relation("ScriptVersions", fields: [parentScriptId], references: [id], onDelete: SetNull)
  versions       Script[] @relation("ScriptVersions")

  @@index([batchId])
  @@index([status])
  @@index([parentScriptId])
}

model ProjectDraft {
  id             String    @id @default(cuid())
  userId         String    @unique // One active draft per user
  currentStep    Int       @default(0)
  completedSteps Int[]     @default([])
  sourceUrl      String?
  importMethod   String    @default("scratch") // "scratch" | "url"
  importStatus   String?   // "pending" | "importing" | "completed" | "failed"
  importError    String?
  formData       Json      @default("{}")
  extractedAt    DateTime?
  extractionData Json?
  analyzedAt     DateTime?
  analysisData   Json?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
